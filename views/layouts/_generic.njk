{% extends "govuk/template.njk" %}

{% set htmlClasses = 'no-js' %}
{% set assetUrl = 'https://design-system.service.gov.uk/assets' %}

{% block pageTitle %}{{ title }} â€“ LBS Design System{% endblock %}

{% block head %}
  {% if not ENVIRONMENT or ENVIRONMENT != 'production' %}
    <meta name="robots" content="noindex, nofollow">
  {% endif %}
  <meta name="og:title" content="{{title}}">
  <meta name="description" content="{{description}}">
  <meta name="og:description" content="{{description}}">
  <link rel="canonical" href="{{ canonical }}" />
  <!--[if lt IE 9]>
    <link href="{{ getFingerprint('stylesheets/main-ie8.css') }}" rel="stylesheet" media="all" />
    <script src="{{ getFingerprint('javascripts/head-ie8.js') }}"></script>
  <![endif]-->
  <!--[if !IE 8]><!-->
    <link href="{{ getFingerprint('stylesheets/main.css') }}" rel="stylesheet" media="all" />
  <!--<![endif]-->
  <script src="/javascripts/vendor/modernizr.js"></script>
{% endblock %}

{% set lbsAssetPath = '/assets/img/favicons' %}

    {% block headIcons %}
      <link rel="shortcut icon" sizes="16x16 32x32 48x48" href="{{ lbsAssetPath | default('/assets') }}/favicon.ico" type="image/x-icon">
      <link rel="mask-icon" href="{{ lbsAssetPath | default('/assets') }}/govuk-mask-icon.svg" color="{{ themeColor | default('#0b0c0c') }}"> {# Hardcoded value of $govuk-black #}
      <link rel="apple-touch-icon" sizes="180x180" href="{{ lbsAssetPath | default('/assets') }}/govuk-apple-touch-icon-180x180.png">
      <link rel="apple-touch-icon" sizes="167x167" href="{{ lbsAssetPath | default('/assets') }}/govuk-apple-touch-icon-167x167.png">
      <link rel="apple-touch-icon" sizes="152x152" href="{{ lbsAssetPath | default('/assets') }}/govuk-apple-touch-icon-152x152.png">
      <link rel="apple-touch-icon" href="{{ lbsAssetPath | default('/assets') }}/govuk-apple-touch-icon.png">
    {% endblock %}

{% block bodyStart %}
  <!--[if gte IE 9]><!-->
  {% include "_cookie-banner.njk" %}
  <!--<![endif]-->
{% endblock %}

{# We provide our own header, so blank the one provided by the template #}
{% block header %}{% endblock %}

{% block main %}
<div class="app-pane {% block appPaneClasses %}{% endblock %}" id="top">
  {% include "_header.njk" %}
  {% include "_mobile-navigation.njk" %}
  {% include "_banner.njk" %}
  {% include "_navigation.njk" %}
  {% block body %}
    {{ contents | safe }}
  {% endblock %}
</div>
{% endblock %}

{# We provide our own footer, so blank the one provided by the template #}
{% block footer %}{% endblock %}

{% block bodyEnd %}
<script src="{{ getFingerprint('javascripts/govuk-frontend.js') }}"></script>
<script src="/javascripts/lbs-frontend.js"></script>
  <!--[if !IE 8]><!-->
    <script src="{{ getFingerprint('javascripts/application.js') }}"></script>
  <!--<![endif]-->
  <!--[if lt IE 9]>
    <script src="{{ getFingerprint('javascripts/application-ie8.js') }}"></script>
  <![endif]-->
{% endblock %}
